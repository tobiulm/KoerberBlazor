@inherits LayoutComponentBase
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-blazing-red">
    <div class="container-fluid">
        <a class="navbar-brand logo" href="">
            <img src="/img/logo.svg" alt="Blazing Pizza Logo" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu" aria-controls="mainMenu" title="MobileMenuButton">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="mainMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink href="" class="nav-tab" Match="NavLinkMatch.All">
                        <img src="/img/pizza-slice.svg" alt="Get Pizza Icon" />
                        <div>
                            Get Pizza
                        </div>
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="content">
    @Body
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
